{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "plugins": ["react", "prettier", "jest", "jest-formatting"],
  "extends": [
    "airbnb",
    "prettier",
    "plugin:jest/all",
    "plugin:jest-formatting/strict"
  ],
  "rules": {
    "prettier/prettier": "error",

    "jest/prefer-expect-assertions": "off"
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018
  }
}
