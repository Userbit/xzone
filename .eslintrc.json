{
  "env": {
    "browser": true,
    // "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "plugins": ["react", "prettier", "jest", "jest-formatting", "import"],
  "extends": ["airbnb", "prettier", "plugin:jest/all", "plugin:jest-formatting/strict"],
  "rules": {
    "prettier/prettier": "error",

    "jest/prefer-expect-assertions": "off",

    "import/no-commonjs": "error",
    "import/no-namespace": "error",
    "import/export": "error",
    "import/prefer-default-export": "error"
  },
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018
  }
}
